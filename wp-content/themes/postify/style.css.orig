textarea { width:95%; max-height:80px; }

input[type="submit"] {
	background: url('library/images/submit.png');
	width:154px;
	height:37px;
	padding:0;
	margin:0;
	border:none;
	color:#fff;
	font-size:17px;
	font-family: "HelveticaNeueLT-67-Condensed";
	font-weight:normal;
	text-shadow:-1px 0 1px #D43C29;
	text-rendering: optimizeLegibility; 
	-webkit-font-smoothing: antialiased;
	opacity:0.99;
	-moz-opacity:0.99;
	filter: alpha(opacity=99);
	cursor:pointer;
}

input[type="submit"]:hover {
	opacity:0.9;
	-moz-opacity:0.9;
	filter: alpha(opacity=90);
}

button {
	position:relative;
	background: url('library/images/btn-red.png') no-repeat center; 
	display:block;
	height:37px;
	margin:0 0 0 15px;
	border:none; 
	color:#fff;
	font-family: "HelveticaNeueLT-67-Condensed";
	font-weight:normal;
	font-size:17px;
	text-shadow:-1px 0 1px #D43C29;
	opacity:0.99;
	-moz-opacity:0.99;
	filter: alpha(opacity=99);
	outline:none;
}

button span.start {
	position:absolute;
	top:0;
	left:-15px;
	background: url('library/images/btn-red.png') top left;
	display:block;
	height:37px;
	width:17px;
}

button span.end {
	position:absolute;
	top:0;
	right:-15px;
	background: url('library/images/btn-red.png') top right;
	display:block;
	height:37px;
	width:17px;
}

button:hover { 
	background: url('library/images/btn-red.png') no-repeat center; 
	border:none;
	color:#fff;
	opacity:0.9;
	-moz-opacity:0.9;
	filter: alpha(opacity=90);
	text-shadow:-1px 0 1px #D43C29; 
	text-rendering: optimizeLegibility; 
	-webkit-font-smoothing: antialiased;
	padding:11px 10px 11px 11px;
